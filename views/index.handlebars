<h1 class="mx-auto">Eat-Da-Burger</h1>

<div class="row">
<div class="col-sm-5 float-left box">
<h2 class="mx-auto text-dark">Burger Types:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>



<div class="col-sm-5 float-left box">
<h2 class="mx-auto text-dark">Devoured:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

</div>
</div>

<div class="row">
  <div class="col-sm-4">
<div class="clearfix border rounded text-justify">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca" class="text-light">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit" class="btn btn-primary">Add Burger</button>
</form>
  </div>
  </div>
  </div>